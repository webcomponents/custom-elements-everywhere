{
  "scripts": {
    "test": "wireit",
    "build": "wireit",
    "build:stencil": "wireit"
  },
  "library_repo": "ionic-team/stencil",
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-loader": "9.1.3",
    "chai": "4.3.10",
    "cross-env": "7.0.3",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-firefox-launcher": "2.1.3",
    "karma-sourcemap-loader": "0.4.0",
    "karma-webpack": "5.0.1",
    "webpack": "5.94.0"
  },
  "dependencies": {
    "@stencil/core": "4.27.0"
  },
  "wireit": {
    "test": {
      "dependencies": [
        "../..:karma-plugins",
        "build:stencil"
      ],
      "files": [
        "karma.conf.js",
        "stencil.config.ts",
        "tests.webpack.js",
        "tsconfig.json",
        "src",
        "dist",
        "meta"
      ],
      "output": [
        "results"
      ],
      "command": "cross-env LIBRARY_NAME=@stencil/core karma start"
    },
    "build": {
      "dependencies": [
        "test"
      ]
    },
    "build:stencil": {
      "files": [
        "stencil.config.ts",
        "tsconfig.json",
        "src"
      ],
      "output": [
        "dist"
      ],
      "command": "stencil build"
    }
  }
}
