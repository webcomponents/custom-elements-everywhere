{
	"version": "2.4.2",
	"compilerOptions": {
		"declaration": false,
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"module": "umd",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5"
	},
	"types": [
		"mocha",
		"node"
	],
	"files": [
		"tests.webpack.ts"
	],
	"include": [
		"./src/**/*.ts"
	]
}
